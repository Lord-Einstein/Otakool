{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/main.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
    <div class="login-container">

        <!-- Left Side - Image (Desktop only) -->
        <div class="login-image-section">
            <img src="{{ asset('img/login_img2.png') }}"
                 class="login-bg-image"
                 alt="Manga Universe">
            <div class="image-overlay-gradient"></div>
        </div>

        <!-- Right Side - Form -->
        <div class="login-form-section">
            <div class="form-wrapper">

                <!-- Header -->
                <div class="login-header">
                    <h1 class="brand-title">{{ 'app.name'|trans }}</h1>
                    <div class="subtitle-container">
                        <p id="dynamic-subtitle" class="dynamic-subtitle">INITIALISATION DU SYSTÈME</p>
                    </div>
                </div>

                <div class="laser-divider"></div>

                <!-- Error Alert -->
                {% if error %}
                    <div class="error-alert">
                        <i class="fa-solid fa-triangle-exclamation pulse-icon"></i>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                <!-- Login Form -->
                <form method="post" class="login-form">

                    <!-- Email Input -->
                    <div class="input-group">
                        <label class="input-label">{{ 'login.email'|trans }}</label>
                        <div class="input-wrapper glass-input">
                            <div class="input-icon">
                                <i class="fa-solid fa-at icon-animate"></i>
                            </div>
                            <input type="email"
                                   value="{{ last_username }}"
                                   name="_username"
                                   class="form-input"
                                   placeholder="email@otakool.com"
                                   autocomplete="email"
                                   required
                                   autofocus>
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div class="input-group">
                        <label class="input-label">{{ 'login.password'|trans }}</label>
                        <div class="input-wrapper glass-input">
                            <div class="input-icon">
                                <i class="fa-solid fa-fingerprint icon-animate"></i>
                            </div>
                            <input type="password"
                                   name="_password"
                                   id="password"
                                   class="form-input"
                                   placeholder="••••••••••••"
                                   autocomplete="current-password"
                                   required>
                            <button type="button" id="togglePassword" class="toggle-password">
                                <i class="fa-solid fa-eye mythic-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="form-options">
                        <label class="custom-checkbox">
                            <input type="checkbox" name="_remember_me" id="remember_me">
                            <span class="checkbox-custom">
                                <i class="fa-solid fa-hands-praying checkbox-icon"></i>
                            </span>
                            <span class="checkbox-label">{{ 'login.remember_me'|trans }}</span>
                        </label>
                        <a href="#" class="forgot-link">{{ 'login.forgot_pass'|trans }}</a>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Submit Button with Portal -->
                    <button type="submit" class="submit-button">
                        <div class="portal-icon">
                            <img src="{{ asset('img/portal.png') }}" alt="Portal" class="portal-image">
                        </div>
                        <span class="button-text">{{ 'login.submit'|trans }}</span>
                    </button>
                </form>

                <!-- Register Link -->
                <div class="register-section">
                    <p class="register-text">{{ 'login.new_here'|trans }}</p>
                </div>

            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('scripts/login.js') }}"></script>
    {% endblock %}
{% endblock %}
